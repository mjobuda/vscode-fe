{
    "name": "vscode-fe",
    "displayName": "Fe",
    "description": "Ethereum Fe language support for Visual Studio Code",
    "license": "MIT",
    "version": "0.0.3",
    "keywords": [
        "Fe",
        "ethereum",
        "blockchain",
        "compiler",
        "security"
    ],
    "publisher": "MarekOwsikowski",
    "engines": {
        "vscode": "^1.20.2"
    },
    "categories": [
        "Programming Languages",
        "Snippets"
    ],
    "bugs": {
        "url": "https://github.com/mjobuda/vscode-fe/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/mjobuda/vscode-fe"
    },
    "activationEvents": [
        "onLanguage:fe",
        "onCommand:fe.compileContract",
        "onCommand:openAST"
    ],
    "main": "./src/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "fe",
                "aliases": [
                    "Fe",
                    "fe"
                ],
                "extensions": [
                    ".fe"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "fe",
                "scopeName": "source.fe",
                "path": "./syntaxes/fe.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "fe",
                "path": "./snippets/fe.json"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Fe (Ethereum)",
            "properties": {
                "fe.compile.onSave": {
                    "type": "boolean",
                    "default": true,
                    "description": "Automatically compile when saving and annotate code with compile results."
                },
                "fe.mode.active": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable/Disable all active components of this extension (emergency)."
                },
                "fe.decoration.enable": {
                    "type": "boolean",
                    "default": true,
                    "description": "Whether to enable/disable fe active syntax highlighting for security."
                },
                "fe.hover.enable": {
                    "type": "boolean",
                    "default": true,
                    "description": "Whether to enable/disable fe tooltips/hover information."
                },
                
                "fe.command": {
                    "type": "string",
                    "default": "target/debug/fe",
                    "description": "Defines how to invoke the fe compiler command. This can by any shell command and the fe arguments will be passed to this command as <fe.command> <args>. Default is /target/debug/fe "
                },
                "fe.outputFolder": {
                    "type": "string",
                    "default": "output",
                    "description": "Defines the location of the compiled artifacts"
                },
                "fe.options": {
                    "type": "string",
                    "default": "--overwrite --emit=abi,bytecode,ast,tokens,yul,loweredAst",
                    "description": "Defines the options of Fe"
                }
            }
        },
        "commands": [
            {
                "command": "fe.compileContract",
                "title": "fe: Compile"
            },
            {
                "command": "openAST",
                "title": "Hello World"
              }
        ],
        "x-keybindings": [
            {
                "key": "cmd+alt+shift+i",
                "command": "editor.action.inspectTMScopes"
            }
        ],
        "keybindings": [
            {
                "command": "openAST",
                "key": "f4"
            }
        ]
    },
    "scripts": {
    },
    "dependencies": {
        "async": "^2.6.3",
        "chai": "^4.2.0",
        "mythxjs": "^1.3.1",
        "shell-escape": "^0.2.0"
    },
    "devDependencies": {
        "esbuild": "^0.12.9",
        "ts-loader": "^9.2.3",
        "webpack": "^5.40.0",
        "webpack-cli": "^4.7.2"
    }
}
